/* pages/team _new_room/team_new_room.wxss */
page{
    background-color: #f6f6f6;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    height: 80vh;
}
.info{
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
    margin-bottom: 30rpx;
    justify-content: center;
    align-items: center;
    width: 70%;
}
.info input{
    font-size: 32rpx;
    border-radius: 15rpx;
    border: #676767 solid 1px;
    padding: 10rpx;
    display: flex;
    align-items: center;
    justify-content: left;
    text-align: center;
    margin: 10rpx;
    height: 55rpx;
    width: 100%;
    background-color: #ffffff;
}
.time{
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    background-color: white;
    border-radius: 30rpx;
    width: 80%;
}
.circle{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #f6f6f6;
}
.time_during{
    display: flex;
}
.main{
    display: flex;
    justify-content: space-between;
    margin: 0 20rpx;
    width: 80%;
}
.time_select{
    color: #16a8fe;
    font-size: 32rpx;
    width: 100%;
    padding: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 15rpx;
    border: #676767 solid 1px;
    margin: 20rpx 0;
}
.btn{
    margin: 30rpx;
    width: 50%;
    background-color: #448aca;
    color: white;
    border-radius: 20rpx;
}
.alert{
    background-color: #e5e5e5;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

}
