/* pages/team_room/team_room.wxss */
page{
    background-color: #f6f6f6;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.room_info{
    display: flex;
    flex-direction: column;
    width: 82%;
    border-radius: 40rpx;
    background-color: white;
    padding: 30rpx;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}
.line{
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;
    text-align: center;
}
.daka{
    display: flex;
    width: 82%;
    border-radius: 40rpx;
    background-color: white;
    padding: 30rpx;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30rpx;
}
.daka image{
    width: 140rpx;
}
.right{
    display: flex;
    width: 70%;
    align-items: center;
    justify-content: space-between;
    margin: 0 0rpx;
}
.counts_text{
    font-size: 26rpx;
    color: #707070;
}
.my_diary{
    display: flex;
    width: 82%;
    border-radius: 40rpx;
    background-color: white;
    padding: 30rpx;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30rpx;
}
.users{
    display: flex;
    width: 82%;
    border-radius: 40rpx;
    background-color: white;
    padding: 30rpx;
    align-items: center;
    flex-direction: column;
    margin-bottom: 30rpx;
}
.header{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    color: #707070;
}
.left{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 40%;
    margin-left: 30rpx;
}
.left image{
    width: 40rpx;
}
.body{
    height: 40vh;
}
.user_item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    border: solid 1px #aaa;
    margin-top: 20rpx;
    width: 90%;
}
.left_{
    display: flex;
    align-items: center;
}
.right_{
    display: flex;
    align-items: center;
}
.user_list{
    display: flex;
    align-items: center;
    justify-content:center;
}
.content{
    background-color: #eee;
    border-radius: 20rpx;
    padding: 20rpx;
    color: #333;
}

