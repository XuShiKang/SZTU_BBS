/* pages/tools/tools.wxss */
.model{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-bottom: 12rpx;
    margin: 10rpx 0;
    align-items: center;
    justify-content: center;
}
.model-item{
    width: 31%;
    height: 220rpx;
    margin: 0.75%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #fff;
    background-color: deepskyblue;
    font-size: 25rpx;
    border-radius: 20rpx;
    position: relative;
}
.model-item view{
    display: flex;
    justify-content: center;
    align-items: center;
}
.model-item view image{
    width: 100rpx;
    height: 100rpx;
}
