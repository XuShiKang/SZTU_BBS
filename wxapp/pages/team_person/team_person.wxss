page{
    background-color: #f6f6f6;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.room_info{
    display: flex;
    flex-direction: column;
    width: 82%;
    border-radius: 40rpx;
    background-color: white;
    padding: 30rpx;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}
.line{
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;
    text-align: center;
}
.daka{
    display: flex;
    width: 82%;
    border-radius: 40rpx;
    background-color: white;
    padding: 30rpx;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30rpx;
}
.daka image{
    width: 140rpx;
}
